<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/home_drawer"
        android:background="@drawable/drawable_gradient"
        tools:context=".consultant_fragments.ConsultantHomeFragment">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rlTopBarHome"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/topbarHome"
            layout="@layout/top_bar_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_gravity="start"
            >

            <ImageView
                android:id="@+id/drawer_logo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvRegisterClinic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/drawer_logo"
                android:layout_marginTop="20dp"
                android:text="Register Clinic "
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvViewAppointments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:text="View Appointments"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvRegisterClinic"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvContactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:text="Contact us"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/tvViewAppointments" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPrivacyPolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvContactus"
                android:layout_marginTop="10dp"
                android:text="Privacy Policy"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="20dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTermCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvPrivacyPolicy"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:text="Terms and condition"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_marginStart="20dp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="60dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:text="Logout"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                android:textSize="18dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.drawerlayout.widget.DrawerLayout>
</layout>