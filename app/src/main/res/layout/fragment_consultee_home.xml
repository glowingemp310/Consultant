<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.drawerlayout.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_gradient"
    android:id="@+id/home_drawer"

    tools:context=".consultee_fragments.ConsulteeHomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rlTopBarHome"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/topbarHome"
            layout="@layout/top_bar_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/rlTopBarHome"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                    <TextView
                        android:id="@+id/tvFindConsultant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Find your Consultants"
                        android:textColor="@color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="20dp"
                        android:textSize="22sp" />



                <LinearLayout
                    android:id="@+id/llCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tvFindConsultant">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Categories"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        app:layout_constraintTop_toBottomOf="@id/tvFindConsultant"
                        tools:layout_editor_absoluteX="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                </LinearLayout>



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvConsulteeBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_consultee_bottom"
                    app:spanCount="3"
                    android:layout_marginTop="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/llCategory" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start"
        >

        <ImageView
            android:id="@+id/drawer_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/img"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMyAppintments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/drawer_logo"
            android:layout_marginTop="20dp"
            android:text="My Appointments "
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginStart="20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="FAQ"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvMyAppintments"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvContactus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:text="Contact us"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvFAQ" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvContactus"
            android:layout_marginTop="10dp"
            android:text="Privacy Policy"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginStart="20dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTermCondition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvPrivacyPolicy"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:text="Terms and condition"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginStart="20dp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:text="Logout"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:textSize="18dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.drawerlayout.widget.DrawerLayout>
</layout>