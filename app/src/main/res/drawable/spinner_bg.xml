<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#6B535151"/>
                    <padding android:right="10dp"
                        android:top="8dp"
                        android:bottom="8dp"
                        android:left="10dp"
                        />
                    <corners android:radius="12dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#6B535151"
                        />
                </shape>

            </item>
            <item android:drawable="@drawable/arrowdown" android:gravity="center_vertical|right" android:right="5dp"/>

        </layer-list>

    </item>
</selector>